@model Blog
@using System.Text.RegularExpressions;
@{
    ViewData["Title"] = "Info";
}


<h4 class="card-title">Create</h4>
<form class="forms-sample" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <h3>Image</h3>
                        <img src="~/img/blog/@Model.Image" alt="Alternate Text" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Category">Description  </label>
                        <div class="input-group">
                            <input class="form-control" disabled value="@Model.Description" id="category" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label >About</label>
                        <textarea disabled rows="15" cols="52">@Regex.Replace(Model.About, @"<[^>]*>", "").Substring(0,45)</textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category">Category:  </label>
                        <div class="input-group">
                            <input class="form-control" disabled value="@Model.Category.CategoryName" id="category" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>