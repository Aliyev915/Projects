@model Teacher
@{
    ViewData["Title"] = "Edit";
}

    <form class="forms-sample" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input rows="5" class="form-control exampleInputEmail3" asp-for="Name" value="@Model.Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Profession">Profession</label>
                            <input class="form-control exampleInputName1" asp-for="Profession" value="@Model.Profession" />
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Skill.Communication">Communication</label>
                                    <div class="input-group">
                                        <input class="form-control" asp-for="Skill.Communication" value="@Model.Skill.Communication" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Skill.Design">Design</label>
                                    <div class="input-group">
                                        <input class="form-control" asp-for="Skill.Design" value="@Model.Skill.Design" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Skill.Development">Development</label>
                                    <div class="input-group">
                                        <input class="form-control" asp-for="Skill.Development" value="@Model.Skill.Development" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Skill.Innovation">Innovation</label>
                                    <div class="input-group">
                                        <input class="form-control" asp-for="Skill.Innovation" value="@Model.Skill.Innovation" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Skill.Language">Language</label>
                                    <div class="input-group">
                                        <input class="form-control" asp-for="Skill.Language" value="@Model.Skill.Language" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Skill.TeamLeader">Team Leader</label>
                                    <div class="input-group">
                                        <input class="form-control" asp-for="Skill.TeamLeader" value="@Model.Skill.TeamLeader" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="TeacherInfo.Degree">Degree</label>
                            <input class="form-control exampleInputName1" asp-for="TeacherInfo.Degree" value="@Model.TeacherInfo.Degree">
                        </div>
                        <div class="form-group">
                            <label asp-for="TeacherInfo.Email">Email</label>
                            <input class="form-control exampleInputName1" asp-for="TeacherInfo.Email" value="@Model.TeacherInfo.Email">
                        </div>
                        <div class="form-group">
                            <label asp-for="TeacherInfo.Experience">Experience</label>
                            <input class="form-control exampleInputName1" asp-for="TeacherInfo.Experience" value="@Model.TeacherInfo.Experience">
                        </div>
                        <div class="form-group">
                            <label asp-for="TeacherInfo.Faculty">Faculty</label>
                            <input class="form-control exampleInputName1" asp-for="TeacherInfo.Faculty" value="@Model.TeacherInfo.Faculty">
                        </div>


                    </div>
                </div>
            </div>
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="TeacherInfo.Hobby">Hobby</label>
                            <input class="form-control exampleInputName1" asp-for="TeacherInfo.Hobby" value="@Model.TeacherInfo.Hobby">
                        </div>
                        <div class="form-group">
                            <label asp-for="TeacherInfo.Phone">Phone</label>
                            <input class="form-control exampleInputName1" asp-for="TeacherInfo.Phone" value="@Model.TeacherInfo.Phone">
                        </div>
                        <div class="form-group">
                            <label asp-for="TeacherInfo.Skype">Skype</label>
                            <input class="form-control exampleInputName1" asp-for="TeacherInfo.Skype" value="@Model.TeacherInfo.Skype">
                        </div>
                        <div class="form-group">
                            <label>File upload</label>
                            <input value="" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                <input value="" asp-for="Photo" class="form-control file-upload-info" id="upload" accept="image/*" placeholder="Upload Image">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-info" type="button">Upload</button>
                                </span>
                            </div>
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <input type="submit" class="btn btn-primary mr-2" value="Update">
                        <button class="btn btn-light">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
