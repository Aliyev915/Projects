@model Teacher
@{
    ViewData["Title"] = "Delete";
}

<h4 class="card-title">Delete</h4>
<form class="forms-sample" method="post" id="form" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputEmail3">Name</label>
                        <input rows="5" disabled class="form-control exampleInputEmail3" value="@Model.Name" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label value="@Model.Profession">Profession</label>
                        <input disabled class="form-control exampleInputName1" value="@Model.Profession">
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="Skill.Communication">Communication</label>
                                <div class="input-group">
                                    <input class="form-control" disabled value="@Model.Skill.Communication" id="category" />
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="Skill.Design">Design</label>
                                <div class="input-group">
                                    <input class="form-control" disabled value="@Model.Skill.Design" id="category" />
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="Skill.Development">Development</label>
                                <div class="input-group">
                                    <input class="form-control" disabled value="@Model.Skill.Development" id="category" />
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="Skill.Innovation">Innovation</label>
                                <div class="input-group">
                                    <input class="form-control" disabled value="@Model.Skill.Innovation" id="category" />
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="Skill.Language">Language</label>
                                <div class="input-group">
                                    <input class="form-control" disabled value="@Model.Skill.Language" id="category" />
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label asp-for="Skill.TeamLeader">Team Leader</label>
                                <div class="input-group">
                                    <input class="form-control" disabled value="@Model.Skill.TeamLeader" id="category" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <h3>Image</h3>
                        <img src="~/img/teacher/@Model.Image" alt="Alternate Text" />
                    </div>
                    <input type="submit" class="btn btn-danger mr-2" value="Delete">
                    <button asp-action="Index" asp-controller="Dashboard" class="btn btn-light">Cancel</button>
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#form').submit(function (e) {
                e.preventDefault();
                    swal({
                        title: "Are you sure to delete this teacher?",
                        icon: "warning",
                        buttons: true,
                        dangerMode: true,
                    })
                        .then((willDelete) => {
                            if (willDelete) {
                                swal("Teacher has been deleted!", {
                                    icon: "success",
                                });
                                setTimeout(() => { document.querySelector('#form').submit() }, 1000);
                            }
                        });
            })
        })
    </script>


}
