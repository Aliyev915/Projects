@model UserVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/admin/images/logo.svg" alt="logo">
                        </div>
                        <form class="pt-3" method="post">
                            <div class="form-group">
                                <input asp-for="Email" disabled class="form-control form-control-lg" value="@Model.Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Username" class="form-control form-control-lg" value="@Model.Username">
                                <span class="text-danger" asp-validation-for="Username"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Fullname" class="form-control form-control-lg" value="@Model.Fullname">
                                <span class="text-danger" asp-validation-for="Fullname"></span>
                            </div>
                            <div class="mt-3">
                                <input type="submit" value="Update" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
