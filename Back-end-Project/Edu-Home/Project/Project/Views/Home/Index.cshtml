@model HomeVM
@using System.Text.RegularExpressions;
@{
    ViewData["Title"] = "Index";
}
<section id="slider-container" class="slider-area two mb-100">
    <div class="slider-owl owl-theme owl-carousel">
        @foreach (Slider item in Model.Sliders)
        {
            <!-- Start Slingle Slide -->
            <div class="single-slide item" style="background-image: url(@Url.Content(@"~/img/slider/"+item.Image)">
                <!-- Start Slider Content -->
                <div class="slider-content-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="slide-content-wrapper">
                                    <div class="slide-content text-center">
                                        <h2>@Model.Setting.Title.ToUpper()</h2>
                                        <p>@Model.Setting.Description</p>
                                        <a class="default-btn" asp-controller="About">Learn more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Start Slider Content -->
            </div>
        }
    </div>
</section>
<!-- Background Area End -->
<!-- About Start -->
<div class="about-area pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <div id="editor">
                        <h2>@Html.Raw(Model.Content.Title)</h2>
                    </div>
                    <p>@Html.Raw(Model.Content.Description)</p>
                    <p class="hidden-sm">I must explain to you how all this mistaken idea of denouncing pleure and prsing pain was born and I will give you a complete account of the system</p>
                    <a class="default-btn" asp-controller="Course">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="img/about/@Model.Content.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Courses Area Start -->
<div class="courses-area two pt-150 pb-150 text-center">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/img/icon/section1.png" alt="section-title">
                    <h2>Courses We Offer</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Course item in Model.Courses.Take(3))
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course">
                        <div class="course-img">
                            <a href="course-details.html">
                                <img src="img/course/@item.Image" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a href="course-details.html">@Html.Raw(item.Title)</a></h3>
                            <p>@Regex.Replace(item.Description, @"<[^>]*>", "").Substring(0, 121)</p>
                            <a class="default-btn" asp-controller="Course" asp-action="Details" asp-route-Id="@item.Id">read more</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Courses Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>TAKE A VIDEO TOUR</h3>
                    <div class="notice-video">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>@Model.Notices.First().Title</h3>
                    <div class="notice-left">
                        @foreach (Notice item in Model.Notices)
                        {
                            <div class="single-notice-left mb-23 pb-20">
                                <h4>@item.Time</h4>
                                <p>@item.Description</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Event Area Start -->
<div class="event-area two text-center pt-100 pb-145">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/img/icon/section.png" alt="section-title">
                    <h2>Our Events</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Event item in Model.Events.Take(4))
            {
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <div class="single-event mb-35" style="height:300px !important">
                        <div class="event-img">
                            <a href="event-details.html"><img style="width:250px !important; height:250px !important " src="img/event/@item.Image" alt="event"></a>
                        </div>
                        <div class="event-content text-left">
                            <h3>@item.Time</h3>
                            <h4><a href="event-details.html">@Html.Raw(item.Name)</a></h4>
                            <ul>
                                <li><i class="fa fa-clock-o"></i>@item.StartTime - @item.EndTime</li>
                                <li><i class="fa fa-map-marker"></i>@item.Place</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" asp-controller="Event" asp-action="Details" asp-route-Id="@item.Id">join now</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Event Area End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                <div class="col-md-8 col-md-offset-2 col-sm-12">
                    <div class="single-testimonial">
                        <div class="testimonial-info">
                            <div class="testimonial-img">
                                <img src="img/testimonial/@Model.Imotional.Image" alt="testimonial">
                            </div>
                            <div class="testimonial-content">
                                <p>@Model.Imotional.Description</p>
                                <h4>@Model.Imotional.Name</h4>
                                <h5>@Model.Imotional.Profession</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/section.png" alt="section-title">
                    <h2>From Last Our Blog</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Blog item in Model.Blogs.TakeLast(3))
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-blog">
                        <div class="blog-img">
                            <a asp-controller="Blog" asp-action="Details" asp-route-Id="@item.Id"><img src="img/blog/@item.Image" alt="blog"></a>
                            <div class="blog-hover">
                                <a href="blog-details.html"><i class="fa fa-link"></i></a>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>By @item.Author  /  @item.Date.ToString("dd MMMM, yyyy")  /  <i class="fa fa-comments-o"></i>4</p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a href="blog-details.html">@Regex.Replace(item.Description, @"<[^>]*>", "")</a></h2>
                                <a href="blog-details.html">read more</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Blog Area End -->
<!-- Subscribe Start -->
@if (User.Identity.IsAuthenticated)
{
    <div class="subscribe-area pt-58 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="subscribe-content section-title text-center">
                        <h2>subscribe our newsletter</h2>
                        <p>I must explain to you how all this mistaken idea </p>
                    </div>
                    <div class="newsletter-form mc_embed_signup">
                        <form method="get" asp-action="Subscribe">
                            <div id="mc_embed_signup_scroll" class="mc-form">
                                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                <div class="mc-news" aria-hidden="true"><input type="text" name="" tabindex="-1" value=""></div>
                                @{
                                    AppUser user = ViewBag.User;
                                }
                                @if (user.IsSubscribed)
                                {
                                    <button id="mc-embedded-subscribe" style="background-color:#2c2b5e" class="default-btn" type="submit"><span>subscribed</span></button>
                                }
                                else
                                {
                                    <button id="mc-embedded-subscribe" class="default-btn" type="submit"><span>subscribe</span></button>
                                }
                            </div>
                        </form>
                        <!-- mailchimp-alerts Start -->
                        <div class="mailchimp-alerts">
                            <div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
                            <div class="mailchimp-success"></div><!-- mailchimp-success end -->
                            <div class="mailchimp-error"></div><!-- mailchimp-error end -->
                        </div>
                        <!-- mailchimp-alerts end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!-- Subscribe End -->
