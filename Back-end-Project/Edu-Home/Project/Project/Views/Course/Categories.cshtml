@model CourseVM
@using System.Text.RegularExpressions;
@{
    ViewData["Title"] = "Categories";
}
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            @foreach (Course item in Model.Courses)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course mb-70">
                        <div class="course-img">
                            <a href="course-details.html">
                                <img src="~/img/course/@item.Image" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a asp-controller="Course" asp-action="Details" asp-route-Id="@item.Id">@Html.Raw(item.Title)</a></h3>
                            <p>@Regex.Replace(item.Description, @"<[^>]*>", "").Substring(0, 121)</p>
                            <a class="default-btn" asp-controller="Course" asp-action="Details" asp-route-Id="@item.Id">read more</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Course End -->