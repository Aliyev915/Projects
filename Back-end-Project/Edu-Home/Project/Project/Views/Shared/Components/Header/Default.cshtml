<!-- Header Area Start -->
    <input type="hidden"  id="controller" value="@ViewContext.RouteData.Values["controller"]" />
<header class="top">
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <div class="header-top-left">
                        <p>HAVE ANY QUESTION ? @Model.Phone</p>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="header-top-right text-right">
                        <ul>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li><a asp-controller="Account" asp-action="Login">login</a></li>
                                <li><a asp-controller="Account" asp-action="Register">signup</a></li>
                            }
                            else
                            {
                                <li><a>@ViewBag.User</a></li>
                                if (ViewBag.Role != "Member")
                                {
                                    if (ViewBag.Role == "Moderator")
                                    {
                                         Course course = ViewBag.Course;
                                         <li><a asp-area="Admin" asp-controller="Course" asp-action="Edit" asp-route-Id="@course.Id">Go Admin Panel</a></li>
                                    }
                                    else
                                    {
                                        <li><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Go Admin Panel</a></li>
                                    }
                                }
                                <li><a asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt" style="font-size:25px"></i>
                                    </a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-area two header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="logo">
                        <a href="~/index.html"><img src="~/img/logo/@Model.Logo" alt="eduhome" /></a>
                    </div>
                </div>
                <div class="col-md-9 col-sm-9 col-xs-6">
                    <div class="content-wrapper text-right">
                        <!-- Main Menu Start -->
                        <div class="main-menu">
                            <nav>
                                <ul>
                                    <li>
                                        <a asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li><a asp-controller="About" asp-action="Index">About</a></li>
                                    <li>
                                        <a asp-controller="Course" asp-action="Index">courses</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Event" asp-action="Index">event</a>
                                    </li>
                                    <li class="hidden-sm">
                                        <a asp-controller="Teacher" asp-action="Index">teacher</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Blog" asp-action="Index">blog</a>
                                    </li>
                                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                                    <li><a href="~/#">Buy Now</a>
                                </ul>
                            </nav>
                        </div>
                        <!--Search Form Start-->
                        @if (ViewContext.RouteData.Values["controller"].ToString() != "Home" &&
                         ViewContext.RouteData.Values["controller"].ToString() != "About" &&
                         ViewContext.RouteData.Values["controller"].ToString() != "Contact" &&
                         ViewContext.RouteData.Values["controller"].ToString() != "Account")
                        {
                            <div class="search-btn">
                                <ul data-toggle="dropdown" class="header-search search-toggle">
                                    <li class="search-menu">
                                        <i class="fa fa-search"></i>
                                    </li>
                                </ul>
                                <div class="search">
                                    <div class="search-form">
                                        <form id="search-form" action="#">
                                            <input type="search" id="search" placeholder="Search here..." name="search" autocomplete="off" />
                                            <button asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Result">
                                                <span><i class="fa fa-search"></i></span>
                                            </button>
                                            <ul style="background-color:white; font-size: 20px" id="searchResult">
                                            </ul>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                        <!--End of Search Form-->
                        <!-- Main Menu End -->
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="mobile-menu hidden-lg hidden-md hidden-sm"></div>
                </div>
            </div>
        </div>
    </div>
</header>
@if (ViewContext.RouteData.Values["action"].ToString() == "Index")
{
    @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
    {
        <!-- Banner Area Start -->
        <div class="banner-area-wrapper">
            <div class="banner-area text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>@ViewContext.RouteData.Values["controller"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Banner Area End -->
    }
}
else
{
    @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
    {
        <!-- Banner Area Start -->
        <div class="banner-area-wrapper">
            <div class="banner-area text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>@ViewContext.RouteData.Values["controller"]/@ViewContext.RouteData.Values["action"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Banner Area End -->
    }
}
