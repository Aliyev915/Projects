@model IEnumerable<Event>
@{
    ViewData["Title"] = "Result";
}

@if (Model.Count() == 0)
{
    <p class="text-center">
        No Result Search
    </p>
}
else
{
    <div class="event-area three text-center pt-150 pb-150">
        <div class="container">
            <div class="row">
                @foreach (Event item in Model)
                {
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="single-event mb-60">
                            <div class="event-img">
                                <a href="event-details.html">
                                    <img src="~/img/event/@item.Image" alt="event">
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                                <div class="event-date">
                                    <h3>20 <span>jun</span></h3>
                                </div>
                            </div>
                            <div class="event-content text-left">
                                <h4><a asp-controller="Event" asp-action="Details" asp-route-Id="@item.Id">@Html.Raw(item.Name)</a></h4>
                                <ul>
                                    <li><span>time:</span> @item.StartTime - @item.EndTime</li>
                                    <li><span>venue</span> @item.Place</li>
                                </ul>
                                <div class="event-content-right">
                                    <a class="default-btn" asp-controller="Event" asp-action="Details" asp-route-Id="@item.Id">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
}
