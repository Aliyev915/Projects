@model UserVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/admin/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="shortcut icon" href="~/img/loginfavicon.png" type="image/x-icon">
    <title>Login</title>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="login">
                    <div class="login-body">
                        <div class="logo">
                            <img src="~/img/logo/black-logo.png" alt="">
                        </div>
                        <div class="title">
                            <h5>Sign into your account</h5>
                            <form method="post">
                                <div class="form-group">
                                    <input asp-for="Email" class="input-text" disabled placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input asp-for="Username" class="input-text" disabled placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <select class="js-example-basic-single input-text" id="role" asp-for="Role">
                                        @foreach (var role in ViewBag.Roles)
                                        {
                                            <option value="@role">@role</option>

                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <select class="js-example-basic-single input-text" style="display:none" id="company" asp-for="Company">
                                        @foreach (Company item in ViewBag.Companies)
                                        {
                                            <option value="@item.Name">@item.Name</option>

                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn-md button-theme btn-block">Edit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/4a0d6e395d.js" crossorigin="anonymous"></script>

    <script>
        let role = document.querySelector('#role');
        let company = document.querySelector('#company');
        if (role.value == 'Moderator') {
            company.style.display = 'inline-block';
        }
        role.onchange = function () {
            if (role.value == 'Moderator') {
                company.style.display = 'inline-block';
            } else {
                company.style.display = 'none'
            }
        }
    </script>
</body>
</html>
