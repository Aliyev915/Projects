@model AppUser
@{
    ViewData["Title"] = "Edit";
}

<div class="right-side">
    <h4>Change Password</h4>
    <div class="basic-info">
        <div class="title">
            <h4>Basic Info</h4>
        </div>
        <div class="edit">
            <div class="row">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-3 col-sm-6">
                            <div class="image" style="height:200px">
                                @if (Model.Image != null)
                                {
                                    <img src="~/img/@Model.Image" height="200">
                                }
                                <div class="upload">
                                    <i class="fas fa-upload"></i>
                                </div>
                                <div class="delete">
                                    <i class="fas fa-times"></i>
                                </div>
                                <input asp-for="Photo" class="file-input" style="display: none;">
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="col-lg-12">
                                <label for="">Username</label>
                                <input asp-for="UserName" value="@Model.UserName" disabled class="input-text" placeholder="Username">
                            </div>
                            <div class="col-lg-12">
                                <label for="">Email</label>
                                <input asp-for="Email" value="@Model.Email" disabled class="input-text" placeholder="Email">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-lg-6">
                                <label for="">Fullname</label>
                                <input asp-for="Fullname" value="@Model.Fullname" class="input-text" placeholder="Fullname">
                            </div>
                            <div class="col-lg-6">
                                <label for="">Adress</label>
                                <input asp-for="Adress" value="@Model.Adress" class="input-text" placeholder="Adress">
                            </div>
                            <div class="col-lg-6">
                                <label for="">Phone Number</label>
                                <input asp-for="PhoneNumber" value="@Model.PhoneNumber" class="input-text" placeholder="Phone Number">
                            </div>
                        </div>
                        <div class="col-sm-6 ">
                            <button class="btn-post">Change Info</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
