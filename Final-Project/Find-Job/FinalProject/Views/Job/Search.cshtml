@model SearchVM
@{
    ViewData["Title"] = "Index";
}

<input type="hidden" id="controller" value="@ViewContext.RouteData.Values["Controller"]" />

<!-- job listing start -->
<div class="job-search-listing">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="left-section">
                    <div class="form-group">
                        <label>Keywords</label>
                        <input type="text" placeholder="Search Keywords" class="form-control" value="@ViewBag.Text">
                    </div>
                    <div class="form-group" style="position: relative;">
                        <label>Location</label> <br />
                        <select class="js-example-basic-single w-100" id="sort">
                            <option value="All">All</option>
                            @foreach (Location item in ViewBag.Locations)
                            {
                                if (item.Name == ViewBag.Location)
                                {
                                    <option value="@item.Name" selected>@item.Name</option>
                                }
                                else
                                {
                                    <option value="@item.Name">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group" style="position: relative;">
                        <label>Categories</label> <br />
                        <select class="js-example-basic-single w-100">
                            <option value="All">All</option>
                            @foreach (Category item in ViewBag.Categories)
                            {
                                if (item.Name == ViewBag.Category)
                                {
                                    <option value="@item.Name" selected>@item.Name</option>
                                }
                                else
                                {
                                    <option value="@item.Name">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="radio-button-section">
                        <div class="radio-buttons">
                            <div class="row job-features">
                                <div class="icon">
                                    <i class="fas fa-plus"></i>
                                </div>
                                <p>Job Type</p>
                            </div>
                            <div class="job-selection">
                                <input type="radio" name="jobType" checked value="All">
                                <label>All</label><br>
                                @foreach (FinalProject.Models.Type item in ViewBag.Types)
                                {
                                    if (ViewBag.Type == item.Name)
                                    {
                                        <input type="radio" name="jobType" checked value="@item.Name">
                                        <label>@item.Name</label><br>
                                    }
                                    else
                                    {
                                        <input type="radio" name="jobType" value="@item.Name">
                                        <label>@item.Name</label><br>
                                    }
                                }
                            </div>
                        </div>
                        <div class="radio-buttons">
                            <div class="row job-features">
                                <div class="icon">
                                    <i class="fas fa-plus"></i>
                                </div>
                                <p>Data Posted</p>
                            </div>
                            <div class="job-selection">
                                <input type="radio" name="DataPosted" checked value="All">
                                <label>All</label><br>
                                @if (ViewBag.Date == "last-hour")
                                {
                                    <input type="radio" name="DataPosted" checked value="last-hour">
                                    <label>Last Hour</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="DataPosted" value="last-hour">
                                    <label>Last Hour</label><br>
                                }
                                @if (ViewBag.Date == "last-24-hour")
                                {
                                    <input type="radio" name="DataPosted" checked value="last-24-hour">
                                    <label>Last 24 Hour</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="DataPosted" value="last-24-hour">
                                    <label>Last 24 Hour</label><br>
                                }
                                @if (ViewBag.Date == "last-7-days")
                                {
                                    <input type="radio" name="DataPosted" checked value="last-7-days">
                                    <label>Last 7 Days</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="DataPosted" value="last-7-days">
                                    <label>Last 7 Days</label><br>
                                }
                                @if (ViewBag.Date == "last-30-days")
                                {
                                    <input type="radio" name="DataPosted" checked value="last-30-days">
                                    <label>Last 30 Days</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="DataPosted" value="last-30-days">
                                    <label>Last 30 Days</label><br>
                                }
                            </div>
                        </div>
                        <div class="radio-buttons">
                            <div class="row job-features">
                                <div class="icon">
                                    <i class="fas fa-plus"></i>
                                </div>
                                <p>Experience</p>
                            </div>
                            <div class="job-selection">
                                <input type="radio" name="Experince" checked value="All">
                                <label>All</label><br>
                                @if (ViewBag.Experience == "0-1-year")
                                {
                                    <input type="radio" name="Experince" checked value="0-1-year">
                                    <label>0-1 Year</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="Experince" value="0-1-year">
                                    <label>0-1 Year</label><br>
                                }
                                @if (ViewBag.Experience == "1-3-years")
                                {
                                    <input type="radio" name="Experince" checked value="1-3-years">
                                    <label>1-3 Years</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="Experince" value="1-3-years">
                                    <label>1-3 Years</label><br>
                                }
                                @if (ViewBag.Experience == "3-5-years")
                                {
                                    <input type="radio" name="Experince" checked value="3-5-years">
                                    <label>3-5 Years</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="Experince" value="3-5-years">
                                    <label>3-5 Years</label><br>
                                }
                                @if (ViewBag.Experience == "more-5-years")
                                {
                                    <input type="radio" name="Experince" checked value="more-5-years">
                                    <label>More 5 Years</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="Experince" value="more-5-years">
                                    <label>More 5 Years</label><br>
                                }
                            </div>
                        </div>
                        <div class="radio-buttons">
                            <div class="row job-features">
                                <div class="icon">
                                    <i class="fas fa-plus"></i>
                                </div>
                                <p>Offered Salary</p>
                            </div>
                            <div class="job-selection">
                                <input type="radio" name="Salary" checked value="All">
                                <label>All</label><br>
                                @if (ViewBag.Salary == "0-300")
                                {
                                    <input type="radio" name="Salary" checked value="0-300">
                                    <label>0-300</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="Salary" value="0-300">
                                    <label>0-300</label><br>
                                }
                                @if (ViewBag.Salary == "300-600")
                                {
                                    <input type="radio" name="Salary" checked value="300-600">
                                    <label>300-600</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="Salary" value="300-600">
                                    <label>300-600</label><br>
                                }
                                @if (ViewBag.Salary == "600-1000")
                                {
                                    <input type="radio" name="Salary" checked value="600-1000">
                                    <label>600-1000</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="Salary" value="600-1000">
                                    <label>600-1000</label><br>
                                }
                                @if (ViewBag.Salary.Trim() == "1000")
                                {
                                    <input type="radio" name="Salary" checked value="1000+">
                                    <label>1000+</label><br>
                                }
                                else
                                {
                                    <input type="radio" name="Salary" value="1000+">
                                    <label>1000+</label><br>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="right-section">
                    <div class="sort-section d-flex">
                        <div class="col-6">
                            <h6 style="font-weight: bold; margin-top: 8px;">Sort By:</h6>
                        </div>
                        <div class="col-6">
                            <select class="form-control">
                                <option value="">newest</option>
                                <option value="">oldest</option>
                            </select>
                        </div>
                    </div>
                    <partial name="_SearchPartial" />
                </div>
            </div>
        </div>
    </div>
</div>
<!-- job listing end -->

@section Scripts{
        <script src="~/js/search.js"></script>
    <script>
        // In your Javascript (external .js resource or <script> tag)
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });
    </script>
}